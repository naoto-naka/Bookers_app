    <div class="col-md-4">
	  <%= render 'layouts/sidebar', user: current_user, book: @book %>
	</div>
  <h1>Users</h1>
  <div class="col-md-8">
    <table class="table table-striped">
	  <tr>
	    <th>image</th>
		<th>name</th>
		<th></th>
	  </tr>
  <% @users.each do |user| %>
	<tr>
		<td>
			<%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50'  %>
		</td>
		<td><%= user.name %></td>
		<td><%= link_to "Show",user_path(user.id) %></td>
	</tr>
  <% end %>
    </table>
