    <div class="col-md-4">
	  <%= render 'layouts/sidebar', user: @user, book: @book %>
	</div>
  <h1>Book detail</h1>
  <div class="col-md-8">
	<table class="table table-striped">
	  <tr>
	    <th>
	      <%= link_to user_path(@book.user_id) do %>
		  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50 %>
		  <%= @book.user.name%>
          <% end %>

        </th>
		<th><%= link_to @book.title,book_path(@book.id) %></th>
		<th><%= @book.body %></th>
		<% if @book.user.id == current_user.id %>
		<th>
			<button type="button" class="btn btn-success"><%= link_to "Edit", edit_book_path(@book.id) %>
			</button>
		</th>
		<th>
			<button type="button" class="btn btn-danger"><%= link_to "Destroy", book_path, method: :delete, data:{confirm: "本当に消しますか？"}, style: "color:white;"%>
			</button>
		</th>
		<% end %>
      </tr>
	  </table>
	</div>